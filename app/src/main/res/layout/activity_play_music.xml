<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.bottom.PlayMusicActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
        <ImageView
            android:id="@+id/music_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/my_padding"/>
        <TextView
            android:id="@+id/music_song_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:background="@null"
            android:text="歌名"
            android:textSize="@dimen/big_font"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/music_singer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="歌手名歌手名歌手名歌手名歌手名歌手名歌手名歌手名歌手名歌手名歌手名歌手名"
        android:ellipsize="marquee"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="@dimen/my_padding"
        android:layout_marginBottom="30dp"
        android:paddingLeft="@dimen/my_padding"
        android:paddingRight="@dimen/my_padding"/>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/big_image"
        android:layout_height="@dimen/big_image"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius ="192dp">

        <ImageView
            android:id="@+id/music_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loading_error" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/music_lrc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="歌词"
        android:textColor="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/my_padding"
        android:paddingRight="@dimen/my_padding">
        <TextView
            android:id="@+id/music_time_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/music_seek_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/music_time_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="04:30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/my_padding"
        android:paddingRight="@dimen/my_padding"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/music_like_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_song_like"/>
        <ImageView
            android:id="@+id/music_last_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_song_last"/>
        <ImageView
            android:id="@+id/music_play_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_song_play"/>
        <ImageView
            android:id="@+id/music_next_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_song_next"/>
        <ImageView
            android:id="@+id/music_download_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_song_download"/>
    </LinearLayout>
</LinearLayout>